/*using System;

class Program
{
    static void Main(string[] args)
    {
        Console.Title = "Multiplicación de Matrices";

        int[,] matrizA = new int[4, 4];
        int[,] matrizB = new int[4, 4];
        int[,] matrizResultado = new int[4, 4];
