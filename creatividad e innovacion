/*using System;

class Program
{
    static void Main(string[] args)
    {
        int count = 0;

        do
        {
            Console.Write("Ingrese un número: ");
            int numero = int.Parse(Console.ReadLine());

            long factorial = CalcularFactorial(numero);

            Console.WriteLine($"El factorial de {numero} es: {factorial}");

            Console.Write("¿Desea repetir el proceso? (s/n): ");
            string respuesta = Console.ReadLine();

            if (respuesta.ToLower() != "s")
                break;

            count++;
        } while (true);

        Console.WriteLine($"Se realizó el proceso {count} veces.");
    }

    static long CalcularFactorial(int num)
    {
        if (num == 0)
            return 1;

        long factorial = 1;
        for (int i = 1; i <= num; i++)
        {
            factorial *= i;
        }
        return factorial;
    }
}*/


/*using System;

class Program
{
    static void Main(string[] args)
    {
        int count = 0;

        do
        {
            Console.Write("Ingrese un número: ");
            double numero = double.Parse(Console.ReadLine());

            Console.Write("Ingrese la potencia a la que desea elevar el número: ");
            int potencia = int.Parse(Console.ReadLine());

            double resultado = CalcularPotencia(numero, potencia);

            Console.WriteLine($"El resultado de elevar {numero} a la potencia {potencia} es: {resultado}");

            Console.Write("¿Desea repetir el proceso? (s/n): ");
            string respuesta = Console.ReadLine();

            if (respuesta.ToLower() != "s")
                break;

            count++;
        } while (true);

        Console.WriteLine($"Se realizó el proceso {count} veces.");
    }

    static double CalcularPotencia(double num, int potencia)
    {
        if (potencia == 0)
            return 1;

        double resultado = 1;
        for (int i = 0; i < Math.Abs(potencia); i++)
        {
            resultado *= num;
        }

        if (potencia < 0)
            resultado = 1 / resultado;

        return resultado;
    }
}*/

/*using System;

class Program
{
    static void Main(string[] args)
    {
