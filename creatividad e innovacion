/*using System;

class Program
{
    static void Main(string[] args)
    {
        int[] arreglo = new int[10];

        // Capturar valores para llenar el arreglo
        for (int i = 0; i < arreglo.Length; i++)
        {
            Console.Write($"Ingrese el valor {i + 1}: ");
            arreglo[i] = int.Parse(Console.ReadLine());
        }

        // Solicitar número para buscar en el arreglo
        Console.Write("\nIngrese el número a buscar en el arreglo: ");
        int numeroBuscado = int.Parse(Console.ReadLine());

        // Buscar el número en el arreglo
        bool encontrado = false;
        int cantidadVecesEncontrado = 0;
        Console.Write("\nEl número se encuentra en las posiciones: ");
        for (int i = 0; i < arreglo.Length; i++)
        {
            if (arreglo[i] == numeroBuscado)
            {
                Console.Write($"{i} ");
                encontrado = true;
                cantidadVecesEncontrado++;
            }
        }

        // Mostrar resultado
        if (encontrado)
        {
            Console.WriteLine($"\n\nEl número {numeroBuscado} se encontró {cantidadVecesEncontrado} veces en el arreglo.");
        }
        else
        {
            Console.WriteLine($"\n\nEl número {numeroBuscado} no se encuentra dentro del arreglo.");
        }

        Console.ReadLine();
    }
